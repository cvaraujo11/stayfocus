
# Supabase Configuration
# Copy this file to .env.local and fill in your actual values
# Get these values from: Supabase Dashboard > Project Settings > API

# Public Supabase URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Public Anonymous Key (safe to expose in client-side code)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Service Role Key (NEVER expose in client-side code!)
# Only use this for server-side operations
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Session Configuration
# Generate a secure random 32+ character string for production
SESSION_SECRET=replace_this_with_a_real_random_32_byte_hex_string

# Perplexity API (for AI question generation)
PPLX_API_KEY=your_perplexity_api_key

# Optional: Feature Flags
# NEXT_PUBLIC_USE_SUPABASE=true

# Optional: Monitoring (Sentry)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Base URL for SEO (sitemap and robots.txt)
NEXT_PUBLIC_BASE_URL=https://stayfocus-alpha.vercel.app
